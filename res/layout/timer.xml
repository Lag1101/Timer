<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:autoText="true"
            android:textSize="80sp" android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="1">
        <ToggleButton
                android:layout_width="128dp"
                android:layout_height="86dp"
                android:onClick="onToggleClicked"
                android:id="@+id/toggleButton"
                android:checked="false"
                android:textOn="stop"
                android:textOff="start"
                android:layout_gravity="center_horizontal" android:textSize="20sp" android:layout_weight="0.41"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Clear"
                android:onClick="onClear"
                android:id="@+id/clearButton" android:layout_weight="0.49"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/timeList">
        </LinearLayout>
    </ScrollView>
</LinearLayout>

